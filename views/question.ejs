<%- include('./partials/header.ejs') %>
<body>
   <%- include('./partials/navbar.ejs') %>
   <div class="container">
      <div class="card" id="question-form">
         <div class="card-header">
            <h3>Ask a question</h3>
         </div>

         <div class="card-body">
            <form method="POST" action="/savequestion">
               <label>Title</label>
               <input
                  name="title"
                  type="text"
                  placeholder="Title"
                  class="form-control"
               />
               <br /><label>Question</label>
               <textarea
                  name="question"
                  placeholder="Ask your question here"
                  class="form-control"
               ></textarea>
               <br />
               <button class="btn btn-success">Ask now</button>
            </form>
         </div>
      </div>
   </div>
</body>
